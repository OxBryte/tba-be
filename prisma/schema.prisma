// This is the main schema file for the multi-file Prisma schema
// All datasource and generator configurations should be here

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User-related models
model User {
  id             String             @id @default(uuid())
  walletAddress  String             @unique
  watchList      TokenWatchlist[]   @relation("UserWatchlist")
  comments       Comment[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@map("users")
}

model TokenWatchlist {
  id            String   @id @default(cuid()) // required unique ID
  tokenAddress  String
  user          User     @relation("UserWatchlist", fields: [userId], references: [id])
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("token_watchlist")
  @@unique([userId, tokenAddress]) // prevent duplicates per user
} 

/// Comment model for token-specific user comments
model Comment {
  id           String   @id @default(uuid())
  content      String
  tokenAddress String
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())

  @@index([tokenAddress, createdAt])
  @@map("comments")
}
